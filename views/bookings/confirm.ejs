<% layout("/layouts/boilerplate") -%>

<div class="row mt-3">
    <div class="col-8 offset-2">
        <h3>Confirm your Booking</h3>
        
        <div class="card listing-card mt-3">
            <div class="card-body">
                <h5 class="card-title"><%= listing.title %></h5>
                <p><b>Dates:</b> <%= booking.checkIn.toDateString() %> - <%= booking.checkOut.toDateString() %></p>
                <p><b>Total Price:</b> &#8377; <%= booking.totalPrice.toLocaleString("en-IN") %></p>

                <button id="rzp-button1" class="btn btn-success">Pay Now</button>
            </div>
        </div>
    </div>
</div>

<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script>
    var options = {
        "key": "<%= key_id %>", 
        "amount": "<%= order.amount %>", 
        "currency": "INR",
        "name": "StayScout",
        "description": "Booking for <%= listing.title %>",
        "order_id": "<%= order.id %>", 
        // SUCCESS HANDLER
        "handler": function (response){
            // If payment successful, redirect to verify route
            window.location.href = `/listings/<%= listing._id %>/book/verify?bookingId=<%= booking._id %>&paymentId=${response.razorpay_payment_id}&orderId=${response.razorpay_order_id}&signature=${response.razorpay_signature}`;
        },
        "prefill": {
            "name": "<%= newuser.username %>",
            "email": "<%= newuser.email %>"
        },
        "theme": {
            "color": "#fe424d"
        }
    };
    
    var rzp1 = new Razorpay(options);
    
    document.getElementById('rzp-button1').onclick = function(e){
        rzp1.open();
        e.preventDefault();
    }
</script>