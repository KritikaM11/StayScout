<% layout("/layouts/boilerplate") -%>
    <h1 class="col-6 offset-3">Login To Stayscout</h1>
    <div class="row">
        <div class="col-6 offset-3 mt-4">
            <form action="/login" method="POST" novalidate class="needs-validation">
                <div class="mb-3">
                    <label for="text" class="form-label">Username</label> <br>
                    <input name="username" id="username" type="text" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label> <br>
                    <input name="password" id="password" type="password" class="form-control" required>

                </div>
                <button class="btn btn-success">Login</button>

                 <div class="mt-3 mb-3">
                    <a href="/auth/google/login" class="btn btn-outline-dark w-100">
                    <i class="fa-brands fa-google"></i> Login with Google
                    </a>
                </div>
            </form>
        </div>
    </div>