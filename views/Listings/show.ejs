<% layout("/layouts/boilerplate") -%>

<script>
    const listing = <%- JSON.stringify(listing) %>;
</script>

<div class="row mt-3">
        <div class="col-7 col-lg-7">
            
        <h3><%= listing.title %></h3>
        
        <div class="card listing-card mt-3">
            <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing image" style="height: 300px; object-fit: cover; border-radius: 1rem;">
            <div class="card-body">
                <p class="card-text"> Owned by <i><b><%= listing.owner.username %></b></i></p>
                <p class="card-text"><%= listing.description %></p>
                <p class="card-text"> &#8377; <%= listing.price.toLocaleString('en-IN') %></p>
                <p class="card-text"> <i class="fa-solid fa-location-dot"></i> <%= listing.location %>, <%= listing.country %></p>
            </div>
        </div>

        <% if(newuser && newuser._id.equals(listing.owner._id)) { %>
            <div class="btns mb-4">
                <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-btn me-3">Edit</a>
                <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" style="display: inline;">
                    <button class="btn btn-dark">Delete</button>
                </form>
            </div>
        <% } %>

        <hr>
        <br>
        <h4>For Booking!</h4>
        <% if(newuser) { %>
            <form action="/listings/<%= listing._id %>/book" method="POST" class="needs-validation mt-3" novalidate>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="checkin" class="form-label">Check-In</label>
                        <input type="date" id="checkin" name="booking[checkIn]" class="form-control" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="checkout" class="form-label">Check-Out</label>
                        <input type="date" id="checkout" name="booking[checkOut]" class="form-control" required>
                    </div>
                </div>
                <button class="btn btn-success">Proceed to Pay</button>
            </form>
        <% } else { %>
            <div class="alert alert-danger mt-3">
                <a href="/login">Login</a> to book this!
            </div>
        <% } %>
           <br>
        <% if(newuser) { %>
            <hr>
            <h4>Leave A Review</h4>
            <form class="mb-3 needs-validation" action="/listings/<%= listing._id %>/reviews" method="POST" novalidate>
                <div class="mt-3">
                    <label for="rating" class="form-label">Rating</label>
                    <fieldset class="starability-slot">
                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>
                </div>
                <div class="mb-3">
                    <label for="comment" class="form-label">Comment</label>
                    <textarea name="review[comment]" id="comment" placeholder="Leave a comment..." class="form-control" rows="5" required></textarea>
                    <div class="invalid-feedback">Please enter a comment</div>
                </div>
                <button class="btn btn-outline-dark">Submit</button>
            </form>
        <% } %>
    </div>

    <div class="col-5 col-lg-5 mt-3 mb-4">
        <h4>Where you'll be</h4>
        <p> <%= listing.location %>, &nbsp; <%= listing.country %></p>
        <div id="map" style="height: 800px; width: 100%; border-radius: 10px;" class="shadow-sm"></div>
    </div>
</div>

<% if(listing.reviews.length > 0) { %>
    <div class="row mb-4">
        <div class="col-12">
            <hr>
            <h4><%= listing.reviews.length %> person reviewed this! </h4>
            <div class="row">
                <% for (review of listing.reviews) { %>
                    <div class="card col-5 ms-3 mb-3 border p-3 mt-3">
                        <div class="card-body">
                            <h5 class="card-title">@<%= review.author.username %></h5>
                            <p class="starability-result card-text ratingstar" data-rating="<%= review.rating %>"></p>
                            <p class="card-text"><%= review.comment %></p>
                        </div>
                        <% if(newuser) { %> <form class="mt-2" method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                                <button class="btn btn-sm btn-dark">Delete</button>
                            </form>
                        <% } %>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
<% } %>

<script src="/js/map.js"></script>